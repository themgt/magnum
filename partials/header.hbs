{{#if @blog.cover }}
  <div role='banner' class="header_magnum" style="background-image:url('{{@blog.cover}}')">
{{ else }}
  <div role='banner' class="header_magnum">
{{/if}}
    
    {{#if @blog.logo}}
      <a class="logo_magnum" href="http://www.pogoapp.com"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
    {{ else }}
      <h1 class="blogtitle_magnum">
        <a title="{{@blog.title}}" href='http://www.pogoapp.com'>
        {{{@blog.title}}}
        </a>
      </h1>
      <p>&nbsp;</p>
    {{/if}}
    <p>
      <a href='http://www.pogoapp.com/'>home</a>
      &nbsp;|&nbsp;
      <a href='http://www.pogoapp.com/web/pricing'>pricing</a>
      &nbsp;|&nbsp;
      <a href='https://hub.pogoapp.com'>browse apps</a>
       &nbsp;|&nbsp;
      <a href='/web/showcase'>showcase</a>
      &nbsp;|&nbsp;
      <a href="/signup">sign up</a>
    </p>
    <h4 class="blogdescription_magnum">
      {{#if @blog.cover }}
        <a title="{{@blog.title}}" href='{{@blog.url}}' class="darker_magnum"></a>
      {{ else }}
        <a title="{{@blog.title}}" href='{{@blog.url}}'></a>
      {{/if}}
      {{@blog.description}}
    </h4>
  </div>